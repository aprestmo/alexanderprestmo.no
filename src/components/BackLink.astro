---
// Extract language from pathname (e.g., "/no/cv" -> "no", "/en/something" -> "en")
const pathSegments = Astro.url.pathname.split("/").filter(Boolean);
const lang = pathSegments[0] || "no"; // Default to 'no' if no language segment found
---

<div class="flow" style="text-align: center">
  <a href={`/${lang}`}
    >&larr; {lang === "en" ? "Back to frontpage" : "Tilbake til forsiden"}</a
  >
</div>
