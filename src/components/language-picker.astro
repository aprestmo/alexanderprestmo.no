---
import { Languages } from "@/i18n/default-lang-options";

const currentLocale = Astro.currentLocale;
---

<select name="lang" id="lang">
  {Languages.map((lang) => (
      <option value={lang.value} selected={lang.value === currentLocale}>
        {lang.name}
      </option>
    ))}
</select>

<script>
  const select = document.querySelector("#lang") as HTMLSelectElement;
  select.addEventListener("change", () => {
    const newLocale = select.value;
    const [_, locale, ...path] = window.location.pathname.split("/");
    /* if (newLocale === "en") {
      window.location.assign(`/${newLocale}/${path.join("/")}`);
    } else {
      window.location.assign(`/${path.join("/")}`);
    } */
    window.location.assign(`/${newLocale}/${path.join("/")}`);
  });
</script>

<style>
  select {
    border: 1px solid var(--fg);
    border-radius: 0.375rem;
    color: var(--fg);
    cursor: pointer;
    display: block;
    font-size: 0.875em;
    margin-inline: auto;
    padding-block-end: 0.4375rem;
    padding-block-start: 0.5rem;
    padding-inline: 1rem;
    text-align: center;
    transition: background-color 120ms ease-in;
    white-space: nowrap;

    &:focus-visible,
    &:hover {
      background-color: color-mix(
        in oklch,
        var(--bg) 10%,
        var(--fg) var(--percentage, 5%)
      );

      @media (prefers-color-scheme: dark) {
        --percentage: 15%;
      }
    }
  }
</style>
